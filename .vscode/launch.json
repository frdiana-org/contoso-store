{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Apps API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build apps.api",
      "console": "externalTerminal",
      "program": "${workspaceFolder}/src/services/apps/Apps.Api/bin/Debug/net7.0/Apps.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/services/apps/Apps.Api",
      "stopAtEntry": false,
      "launchSettingsProfile": "https",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/swagger"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },

    {
